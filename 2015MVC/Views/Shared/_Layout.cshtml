<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="pageContain">
        <!--========= Begin Header =========-->
        <div class="pageContain TopNav">
            <div class="pageContain TopNav LogoArea">
                Kun-Yao MVC Admin platform
            </div>
        </div>
        <!--========= End Header =========-->

        <!--========= Begin Menu =========-->
        <div class="pageContain Menu">
            Menu
        </div>
        <!--========= End Menu =========-->

        <!--========= Begin Content =========-->
        <div class="pageContain MainContent">
            @RenderBody()
        </div>
        <!--========= End Content =========-->
    </div>


    @Scripts.Render("~/bundles/jQuery/jquery")
    @Scripts.Render("~/bundles/Validation/jquery")
    @Scripts.Render("~/bundles/Bootstrap/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
